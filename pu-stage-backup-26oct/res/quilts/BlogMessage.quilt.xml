<?xml version="1.0" encoding="UTF-8"?>
<quilt layout="blog-message" nestable="false" disableTopCssClass="false">
  <add to="footer-right">
    <component id="share-button"/>
    <component id="kudos-action"/>
    <component id="comment-button"/>
  </add>
  <add to="header-left">
    <component id="author-avatar"/>
    <component id="message-view.widget.author-username" wrapper="lia-message-subject-author-time"/>
    <component id="post-date" wrapper="lia-message-subject-author-time"/>
    <component id="author-rank"/>
  </add>
  <add to="main">
    <component id="message-view.widget.subject" wrapper="lia-message-subject-author-time" useBatchProcessingCheckbox="setting:layout.show_batch_checkboxes" disableSubjectLink="false" hideSubjectIcons="true"/>
    <component id="teaser"/>
    <component id="source-device"/>
  </add>
  <add to="footer-main">
    <component id="add-tags"/>
    <component id="tags-with-title-link"/>
    <component id="labels" showTagLabelText="true"/>
  </add>
  <add to="mod-controls-main">
    <component id="modbar"/>
  </add>
</quilt>