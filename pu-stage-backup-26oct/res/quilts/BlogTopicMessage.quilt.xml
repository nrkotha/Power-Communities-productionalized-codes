<?xml version="1.0" encoding="UTF-8"?>
<quilt layout="blog-message" nestable="false" disableTopCssClass="false">
  <add to="footer-right">
    <component id="share-button"/>
    <component id="kudos-action"/>
    <component id="comment-button"/>
  </add>
  <add to="header-left">
    <component id="author-avatar"/>
    <component id="message-view.widget.author-username" wrapper="lia-message-author-with-avatar"/>
    <component id="post-date"/>
    <component id="message-view.widget.subject" useBatchProcessingCheckbox="setting:layout.show_batch_checkboxes" disableSubjectLink="true"/>
  </add>
  <add to="main">
    <component id="message-view.widget.body"/>
    <component id="source-device"/>
    <component id="add-tags"/>
    <component id="tags-with-title-link" showTagLabelText="true"/>
    <component id="labels" showTagLabelText="true"/>
  </add>
  <add to="header-right">
    <component id="message-view.widget.action-menu" renderOrder="blog-article-page-action-menu"/>
  </add>
  <add to="mod-controls-main">
    <component id="modbar-toggle"/>
    <component id="modbar"/>
  </add>
</quilt>