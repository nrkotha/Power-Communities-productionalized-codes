<?xml version="1.0" encoding="UTF-8"?>
<quilt layout="two-column.main-side" nestable="false" disableTopCssClass="false">
  <add to="common-footer">
    <component id="quilt:Footer"/>
  </add>
  <add to="side-content">
    <component id="tkb.widget.dashboard-taplet"/>
    <component id="common.widget.announcement"/>
    <component id="tkb.widget.top-contributors-taplet" showRankWithUserName="true" pagingAlignment="header" showRoleWithUserName="true" usePaging="true" showLeaderboardRank="true"/>
  </add>
  <add to="main-content">
    <component id="tkb.widget.search-bar"/>
    <component id="sections.widget.sections-browser-taplet"/>
    <component id="tkb.widget.recent-tkb-articles-taplet" mode="slim" showBoard="true"/>
  </add>
  <add to="common-header">
    <component id="quilt:Header"/>
  </add>
  <remove from="sub-header-main" for="Header">
    <component id="common.widget.search-form"/>
  </remove>
</quilt>